<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/dashboard">Password Manager</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="/dashboard">Home</a></li>
        <li class="dropdown">
          <a class="dropdown" data-toggle="dropdown" href="/passworCategory">Password Category
          </a>
          <ul class="dropdown-menu">
            <li><a href="/add-new-category">Add New Category</a></li>
            <li><a href="/passwordCategory">View All Category</a></li>
          </ul>
        </li>
        <li><a class="dropdown" data-toggle="dropdown" href="/passworCategory">Password Details
         </a>
          <ul class="dropdown-menu">
            <li><a href="/add-new-password">Add New Password</a></li>
            <li><a href="/view-all-password">View All Passwords</a></li>
          </ul>
        </li>
        <li><a href="/logout">Logout</a></li>
      </ul>
      <div class="navbar-header" style="float: right;">
        <a class="navbar-brand" href="#">Loggedin as: <% if(loginUser){%> <%= loginUser %> <%} %> </a>
      </div>
    </div>
  </nav>
    <div class="container">
        <div class="row">
            <h1>Password Category List</h1>
            <br>

         <table class="table table-striped table-primary">
          <thead>
            <tr>
              <th>Password Category Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(records.length) {
              records.forEach(function(row){
                %>
            <tr>
              <td><%= row.password_category %> </td>
              <td><a class="btn btn-primary btn-xs" href="/passwordCategory/edit/<%=row._id%>"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-xs" href="/passwordCategory/delete/<%=row._id%>"><i class="fa fa-trash"></i></a>
              </td>
            </tr>
            <% }) } %>
          </tbody>
        </table>
      </div>
    </div>
  
</body>
</html>